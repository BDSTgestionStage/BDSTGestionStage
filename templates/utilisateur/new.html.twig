{# templates/utilisateur/new.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Créer un nouvel utilisateur{% endblock %}

{% block body %}
    <h1>Créer un nouvel utilisateur</h1>

    {{ form_start(form) }}
        {{ form_row(form.identifiant) }}
        {{ form_row(form.UTI_password) }}
        {{ form_row(form.roles) }} {# Utilisez un champ de formulaire approprié pour les rôles #}

        <button type="submit" class="btn btn-primary">Créer</button>
    {{ form_end(form) }}
{% endblock %}
